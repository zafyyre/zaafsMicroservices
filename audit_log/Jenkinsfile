pipeline {
    agent any

    stages {
        stage('Lint') {
            steps {
                sshagent(['lab6a']) {
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "pylint --fail-under 5 audit_log/*.py"'
                }
            }
        }
        stage('Security') {
            steps {
                sshagent(['lab6a']) {
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "docker login -u zafyyre -p \'$TOKEN\' docker.io"'
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "docker build -t audit_log:latest ."'
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "trivy image --exit-code 1 --severity HIGH,CRITICAL audit_log:latest"'
                }
            }
        }
        stage('Package') {
            steps {
                sshagent(['lab6a']) {
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "docker login -u zafyyre -p \'$TOKEN\' docker.io"'
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "docker build -t audit_log:latest ."'
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "docker push zafyyre/audit_log:latest"'
                }
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['lab6a']) {
                    sh 'ssh acitzaaf3855@acit3855-lab6a.westus.cloudapp.azure.com "docker pull zafyyre/audit_log:latest && docker-compose -f deployment/docker-compose.yml up -d"'
                }
            }
        }
    }
}
