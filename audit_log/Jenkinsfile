pipeline {
    agent any

    stages {
        stage('Lint') {
            steps {
                sshagent(['lab6a']) {
                    sh "pylint --fail-under 5 audit_log/*.py"
                }
            }
        }
        stage('Security') {
            steps {
                sshagent(['lab6a']) {
                    withCredentials([string(credentialsId: 'DockerHub', variable: 'TOKEN')]) {
                        sh "wget https://github.com/aquasecurity/trivy/releases/download/v0.20.2/trivy_0.20.2_Linux-64bit.tar.gz"
                        sh "tar zxvf trivy_0.20.2_Linux-64bit.tar.gz"
                        sh "sudo mv trivy /usr/local/bin/"
                        sh "docker login -u zafyyre -p '$TOKEN' docker.io"
                        sh "docker build -t audit_log:latest audit_log/."
                        sh "trivy image --exit-code 1 --severity HIGH,CRITICAL audit_log:latest"
                    }
                }
            }
        }
        stage('Package') {
            steps {
                sshagent(['lab6a']) {
                    withCredentials([string(credentialsId: 'DockerHub', variable: 'TOKEN')]) {
                        sh "docker login -u zafyyre -p \'$TOKEN\' docker.io"
                        sh "docker build -t audit_log:latest audit_log/."
                        sh "docker push zafyyre/audit_log:latest"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['lab6a']) {
                    withCredentials([string(credentialsId: 'DockerHub', variable: 'TOKEN')]) {
                        sh "docker login -u zafyyre -p \'$TOKEN\' docker.io"
                        sh "docker pull zafyyre/audit_log:latest && docker-compose -f deployment/docker-compose.yml up -d"
                    }
                }
            }
        }
    }
}
